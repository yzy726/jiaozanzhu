/* 页面容器 */
.page-container {
  padding: 20rpx;
  background: linear-gradient(135deg, #e0f7fa 0%, #b2ebf2 50%, #80deea 100%);
  min-height: 100vh;
}

/* 页面标题 */
.page-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin: 15% 0;
  color: #333;
}

/* 功能卡片通用样式 */
.function-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

/* 卡片头部 */
.card-header {
  margin-bottom: 25rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.card-desc {
  font-size: 28rpx;
  color: #666;
}

/* 表单控件样式 */
.form-control {
  display: flex;
  flex-direction: column;
  margin-bottom: 25rpx;
}

.label {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input-field {
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 按钮样式 */
.primary-btn {
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  background-color: #07c160;
  border: none;
  margin-bottom: 20rpx;
}

/* 上传区域样式 */
.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-btn {
  width: 80%;
}

.image-preview {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
}

.confirm-btn {
  background-color: #007aff;
  color: white;
  width: 160rpx;
  padding: 15rpx 0;
  font-size: 24rpx;
}

/* 下载区域样式 */
.download-form {
  margin-top: 10rpx;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  background-color: white;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
  opacity: 0.5;
}

/* 链接区域样式 */
.link-section {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  border: 1rpx solid #eee;
}

.link-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.link-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #07c160;
}

.expire-time {
  font-size: 20rpx;
  color: #666;
}

.link-content {
  position: relative;
}

.link-text {
  font-size: 22rpx;
  color: #333;
  word-break: break-all;
  padding: 15rpx;
  background-color: white;
  border-radius: 8rpx;
  border: 1rpx solid #eee;
  display: block;
  margin-bottom: 15rpx;
  min-height: 80rpx;
}

.copy-btn {
  background-color: #007aff;
  color: white;
  padding: 15rpx 0;
  font-size: 24rpx;
}